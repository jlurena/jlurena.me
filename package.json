{
  "name": "jlurena.me",
  "version": "1.0",
  "author": {
    "name": "Jean Luis Urena",
    "email": "eljean@live.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jlurena/jlurena.me"
  },
  "private": false,
  "description": "Personal website for Jean Luis Urena",
  "license": "UNLICENSED",
  "engines": {
    "npm": "^9.0.0",
    "node": "^20.0"
  },
  "scripts": {
    "build": "NODE_ENV=production webpack --bail --mode production",
    "dev": "NODE_ENV=development webpack && NODE_ENV=development webpack serve",
    "test": "jest"
  },
  "dependencies": {
    "@babel/preset-env": "^7.18.6",
    "@babel/preset-react": "^7.18.6",
    "@fortawesome/fontawesome-svg-core": "^6.1.1",
    "@fortawesome/free-brands-svg-icons": "^6.1.1",
    "@fortawesome/free-solid-svg-icons": "^6.1.1",
    "@fortawesome/react-fontawesome": "^0.2.0",
    "babel-loader": "^9.1.3",
    "css-loader": "^6.7.1",
    "cubic-bezier": "^0.1.2",
    "file-loader": "^6.2.0",
    "fontawesome": "^5.6.3",
    "html-webpack-plugin": "^5.5.0",
    "js-yaml": "^4.1.0",
    "mini-css-extract-plugin": "^2.6.1",
    "prop-types": "^15.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-image-gallery": "^1.2.8",
    "react-refresh": "^0.14.0",
    "react-router-dom": "^6.3.0",
    "resolve-url-loader": "^5.0.0",
    "sass": "^1.63.6",
    "sass-loader": "^13.0.2",
    "snapsvg": "^0.5.1",
    "url-loader": "^4.1.1",
    "webpack": "^5.76.0",
    "webpack-cli": "^5.1.4"
  },
  "devDependencies": {
    "@pmmmwh/react-refresh-webpack-plugin": "^0.5.10",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.6.1",
    "nyc": "^15.1.0",
    "react-test-renderer": "^18.2.0",
    "standard": "^17.1.0",
    "style-loader": "^3.3.1",
    "stylelint": "^15.10.1",
    "stylelint-config-standard": "^34.0.0",
    "stylelint-config-standard-scss": "^10.0.0",
    "webpack-dev-server": "^4.9.3"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all",
      "not IE 11"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "collectCoverage": true,
    "coverageReporters": [
      "html",
      "text"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "./src/__test__/__mocks__/fileMock.js",
      "\\.(css|scss)$": "identity-obj-proxy"
    },
    "snapshotResolver": "./src/__tests__/snapshot-resolver.js",
    "testMatch": [
      "**/?(*.)+(test).[jt]s?(x)"
    ]
  }
}
