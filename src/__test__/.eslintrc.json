{
  "extends": [
    "eslint:recommended",
    "plugin:import/errors",
    "plugin:jsx-a11y/recommended",
    "plugin:react/recommended",
    "airbnb"
  ],
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [
          ".js",
          ".jsx"
        ],
        "paths": [
          "node_modules/",
          "./src"
        ]
      }
    }
  },
  "globals": {
    "document": true,
    "fetch": true,
    "React": true,
    "window": true,
    "test": true,
    "describe": true,
    "jest": true,
    "expect": true
  },
  "rules": {
    "arrow-parens": [
      1,
      "as-needed"
    ],
    "comma-dangle": 0,
    "import/prefer-default-export": 0,
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": [
          "**/*.test.jsx",
          "**/*.test.js",
          "*.js",
          "config/*.js",
          "scripts/*.js"
        ]
      }
    ],
    "key-spacing": [
      1,
      {
        "align": "value"
      }
    ],
    "max-len": [
      1,
      {
        "code": 120
      }
    ],
    "react/jsx-props-no-spreading": 0,
    "react/require-default-props": 0
  }
}
