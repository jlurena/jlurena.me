{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "dist/types",
    "declaration": true,
    "emitDeclarationOnly": true,
    "rootDir": "src"
  },
  "include": [
    "src"
  ]
}
